                                                             @*   @if (subscriptiondata.DurationType == "M")
                                                                {
                                                                        <li class="title"><label id="originplanduration_@subscriptiondata.SubscriptionSetupID">@subscriptiondata.Duration Months</label></li>
                                                                }

                                                                @if(subscriptiondata.DurationType == "MT")
                                                                {
                                                                    <li class="title"><label id="originplanduration_@subscriptiondata.SubscriptionSetupID">@subscriptiondata.Duration Month</label></li>
                                                                }*@

                                                                @if (subscriptiondata.DurationType == "Y")
                                                                {
                                                                    <li class="title"><label id="originplanduration_@subscriptiondata.SubscriptionSetupID">@subscriptiondata.Duration year</label></li>
                                                                }
                                                                </ul>
                                                            </div>
                                                         @*  <div class="saveplan">
                                                               <b>Save</b>
                                                                <span class="dollorsign">$100.00</span>
                                                            </div>*@
                                                        </div>

                                                         </a>
                                                    </div>
                                                    <div id="originplanDivbutton_@subscriptiondata.SubscriptionSetupID">

                                                       @* <a id="ButtonDisplay" href="#" class="py-3 btn btn-warning w-100" onclick="CheckPage('@subscriptiondata.SubscriptionSetupID,@subscriptiondata.Price');">Buy Plan</a>*@

                                                        @*<a id="ButtonDisplay"  href="~/Client/ClientPortal/Payment?SubscriptionSetupID=@subscriptiondata.SubscriptionSetupID&Amount= @subscriptiondata.Price" class="py-3 btn btn-warning w-100">Buy Plan</a>*@
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
