    <script type="text/javascript">
        $('#navbar-items-right li').click(function () {
            $(this).toggleClass("show");
            $('.dropdown-menu.dropdown-menu-right').toggleClass('show');

        });

        $("#bars").click(function () {
            $('#sidebar').toggleClass("small");
            $("#main").css('margin-left', '70px');
            if (!$('#sidebar').hasClass('small')) {
                $("#main").css('margin-left', '200px');
            }
        });




    </script>

   
    <span id="keepcheck" style="display:none;"></span>
    <script>
        setInterval(displayHello, 10000);

        function displayHello() {
            KeepSessionLIve();
        }

        function KeepSessionLIve() {
            var id = "1";
            $.ajax({
                type: "POST",
                url: "/Auth/KeepSessionAlive/Check?" + $.param({ Check: id }),
                data: id,
                success: function (result) {
                    $('#keepcheck').val(result);
                }
            });
        }

    </script>

    <script>
        //sidebar collapes in media max-checkWidth 767px js code
        function checkWidth() {
            if ($(window).width() < 992) {
                $('#main').addClass('marginleft');
                $('#sidebar').addClass('small');
            } else {
                $('#main').removeClass('marginleft');
                $('#sidebar').removeClass('small');
            }
        }
        $(window).resize(checkWidth);

        $(function () {
           //console.log("ready!");
            checkWidth();
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
