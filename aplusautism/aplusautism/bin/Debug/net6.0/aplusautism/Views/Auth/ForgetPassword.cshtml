
@{
    Layout = null;
}
<html lang="en">
<head>
    <link rel="stylesheet" href="~/custome_containt/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/custome_containt/css/style.css" />
    <link rel="stylesheet" href="~/custome_containt/css/font-awesome.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<style>
/*.stop-scrolling .sweet-alert.showSweetAlert.visible h2 {
    display: none;
}*/


@@media(min-width:768px)
{
.stop-scrolling .sweet-alert.showSweetAlert.visible 
{
    margin-top: -120px !important;
}

}



</style>
</head>
<body>
    <div id="app">
        <div class="container-fluid auth-wrapper">
            <div class="row auth-row">
                <div class="col-lg-6 col-xl-6 col-sm-12">
                    <div class="row">
                        <div class="auth-header col-12">
                            <div class="inner-rw row align-items-center justify-content-center ">
                                <a class="logo btn" href="#">
                                    <img src="~/custome_containt/images/logo.png" alt="Autism Logo">
                                </a>
                                <div class="head-link">
                                    <a asp-controller="Auth" asp-action="SignIn" class="btn">Sign In</a><span>|</span>
                                    <a asp-controller="Auth" asp-action="Register" class="btn">Sign Up</a>
                                </div>
                            </div>
                        </div>
                        <div class="auth-inner col-12">
                            <div class="auth-form">
                                <div class="head">
                                    <h2>Forgot Password</h2>
                                    <h3>Enter your email for new credentials</h3>
                                </div>
                                <form id="Forgetpassword" asp class="col-12">
                                    <div class="row">
                                        <div class="form-group">
                                            <label for="email">Email Address</label>
                                            @* <input type="email" id="UsrId" class="form-control" name="Username">*@
                                            <input type="email" id="EMailId" class="form-control" name="email">
                                            <span class="icon">
                                                <i class='bx bx-envelope'></i>
                                            </span>
                                        </div>

                                        <div class="form-group submit-btn mt-2">
                                            <button type="button" id="forgetbtn" class="btn btn-primary">Confirm</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-6 col-sm-12 d-xl-block d-lg-block d-none">
                    <div class="row auth-form-pic">
                        <img class="img-fluid" src="~/custome_containt/images/forgot-bg.png" alt="Forgot">
                    </div>
                </div>
            </div>
        </div>
    </div>

    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>

    <script>
        $(document).ready(function () {
            debugger;
            $("#forgetbtn").click(function () {
                debugger

                $.ajax(
                    {
                        type: "POST", //HTTP POST Method
                        url: "/Auth/EmailForgetMailSend", // Controller/View
                        data: { //Passing data
                            Username: $("#EMailId").val() //Reading text box values using Jquery
                        },
                        success: function (data) {
                            debugger;
                            if (data == true) {
                                /*alert("Please Check You Email Box");*/
                                swal("Thanks!", "Please Check Your Email Box , New Password has been sent on your Mail. ");
                                //var options = {
                                //    title: ' ',
                                //    text: '<img  src="../custome_containt/images/forgot_password_notification_300.png" width="100%" height="100%"><p>If you do not see the email in a few minutes,  please check your “junk mail” folder or “spam” folder</p>',
                                //    //width: '600px',
                                //    //height:'430px',
                                //    html: true
                                //};
                                 //swal(options);
                            } else {
                                /*alert("Please Check You Email Box");*/
                                swal("Sorry!", "This Username does not exist.")
                            }
                            
                        },
                        error: function () {
                             swal("Oops!", "There was an error. Please Try again !")
                        }
                    });

            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#forgetbtn').validate({
                rules: {
                    email: "required",

                    email: {
                        required: true,
                        email: true,
                    },

                    messages: {
                        email: {
                            required: "Please enter email",
                            email: "Your email address must be in the format of name@domain.com"
                        }
                    }


                },

                highlight: function (element) {
                    $(element).closest('.form-group').addClass('has-error');
                },
                unhighlight: function (element) {
                    $(element).closest('.form-group').removeClass('has-error');
                },
                errorElement: 'span',
                errorClass: 'help-block',
                errorPlacement: function (error, element) {
                    if (element.parent('.input-group').length) {
                        error.insertAfter(element.parent());
                    } else {
                        error.insertAfter(element);
                    }
                },

            });
        });
    </script>
</body>
</html>