@model aplusautism.Bal.DTO.ContactUsDTO

<div class="main-content container-fluid">
    <div class="plans">
        <form asp-area="Client" asp-controller="ClientPortal" asp-action="Contactus" id="Contact_Us" class="lessons-form">
            <div id="changepassword" class="lessons-form-info mb-3 card">
                <div class="card-header">
                    <div class="align-items-center row justify-content-between">
                        <div class="col-auto px-1 px-md-2">
                            <h5 class="m-0 text-bold">Contact Us</h5>

                           
                        </div>
                        <div class="text-right col-auto px-1 px-md-2">
                                  
                        </div>
                    </div>
                </div>
                <div class="card-body" style="min-height:50vh;">
                    <div class="auth-form">
                        <div class="form-group" style="display:none;">
                            <label for="oldpassword">Email</label>
                            <input asp-for="@Model.Email" type="text" class="form-control" style="display:none;"
                            name="Email" id="Email" value="@ViewBag.GenericEmail" readonly required>
                        </div>

                        <div class="form-group">
                            <label for="newpassword">Subject</label>
                             <input asp-for="@Model.Subject" type="text" class="form-control" name="Subject" id="Subject"  required>
                            
                        </div>

                        <div class="form-group">
                            <label for="newpassword">Message</label>
                            <textarea asp-for="@Model.Description" type="Description" class="form-control" name="Description" id="Description" required></textarea>
                        </div>
                      <div class="form-group text-right">
                               <button type="submit" class="btn btn-md btn-primary" asp->
                                <i class="fa fa-save mr-2"></i>
                                <span>Send Query </span>
                            </button>               
                       </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>


<script>
$(".sidebar-section #lm_Contactus").addClass('active');
</script>


<script type="text/javascript">

    $(document).ready(function() {

        debugger;
        var Success = '@ViewBag.Success';
        if (Success == "true") {
            swal("Thanks!", "Password updated successfully!", "success");

        } else if (Success == "false") {
            swal("Oops!", "Please Enter correct password!", "error");
        }
    });
    
    $(document).ready(function() {

        debugger;
        var Success = '@ViewBag.MailCheck';
        if (Success == "Send") {
            swal("Thanks!", "Your query has been sent to our helpdesk", "success");
            $('#Subject').val("");
            $('#Description').val("");

        } else if (Success == "NotSend") {
            swal("Oops!", "Email not send", "error");
        }
    });
   
</script>









